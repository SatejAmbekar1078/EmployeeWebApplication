@model EmpWebApp.Models.EmployeeRoleMapping

@{
    ViewBag.Title = "Delete Employee Role Mapping";
}

<h2>Delete Employee Role Mapping</h2>

<div>
    <h4>Are you sure you want to delete this?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Employee
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Employee.FirstName) @Html.DisplayFor(model => model.Employee.LastName)
        </dd>
        <dt>
            Role
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EmployeeRole.RoleName)
        </dd>
        <dt>
            Assigned At
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AssignedAt.ToShortDateString())
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-danger">Delete</button>
                @Html.ActionLink("Back to List", "Index", new { @class = "btn btn-secondary" })
            </div>
        </div>
    }
</div>
